import socket
server_host = "izani.synology.me"
server_port = 8443

client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

try:
    server_address = (server_host, server_port)
    client_socket.connect(server_address)
    user_input = input("Please enter your text here: ")

    client_socket.send(user_input.encode('utf-8'))
    reply = client_socket.recv(1024).decode('utf-8')
      print("The reply from server is: ", reply)

except ConnectionRefusedError:
    print("Connection failed. Make sure the server is running and reachable.")
except Exception as e:
    print("An error found: ", str(e))

finally:
    client_socket.close()
