import socket

SERVER_IP = "192.168.238.128"
PORT = 8443

def main():
    client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    client_socket.connect((SERVER_IP, PORT))

    pressure = float(input("Enter pressure in bar: "))

    client_socket.send(str(pressure).encode())

    atmosphere_pressure_data = client_socket.recv(1024)
    atmosphere_pressure = float(atmosphere_pressure_data.decode())

    print(f"Converted pressure: {atmosphere_pressure:.2f} atm")

    client_socket.close()

if __name__ == "__main__":
    main()
